  <section class="sec sec03">
    <h2>焼肉ジャンボのイチオシ商品</h2>

{% assign product = all_products[section.settings.product] %}




    <div class="popular_product flex">
    {% assign current_variant = product.selected_or_first_available_variant %}
    {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
      <img src="{{ featured_image | img_url: '800x800' }}" alt="" class="img">
      
      <div class="product__detail">
        <div class="product__detail__main">
          <h2><span>{{product.title}}</span></h2>
          <p class="price">{{ product.price | money }}(税込)</p>
        </div>
        <div class="product__detail__text">

          {{product.content}}
        </div>
            <form method="post" action="/cart/add" enctype="multipart/form-data" id="AddToCartForm">
              <!--<label for="#">お渡し用袋</label>
                <select name="" id="">
                  <option value="不要">不要</option>
                  <option value="要">要</option>
                </select> -->
                <div class="counter">
                  <label for="number">数量</label>
                  <div class="counter__submit">
                  <input type="number" id = "Quantity" name="quantity" class="form-control" value="1" min="1">
                  </div>
                </div>

              <input type="hidden" id="variant-id" name="id" value={{product.variants.first.id}}>

              <button type="submit" class="Btn02 bgleft02" name="add" id="AddToCart" ><span>カートに入れる</span></button>
            </form>
        <a href="{{ product.url }}" class="link__detail">詳細を見る</a>
      </div>
    </div>

  </section>


  {% schema %}
{

  "name": "Recommend_Product",
  "settings": [

  {
    "type": "product",
    "id": "product",
    "label": "Product"
  }


  ]
}
{% endschema %}

