<header class="header">
    <div class="header_inner">
      <nav class="nav">
        <ul class="nav_list">


          {% for link in linklists.main-menu.links %} <!--リンクをひとつずつ取り出す-->          
             {% assign child_list_handle = link.title | handleize %}<!--リンクの名前をchild＿list＿handleで定義-->
             {% if linklists[child_list_handle].links != blank %}
                    <li class="has-child">

                      <a href="{{ link.url }}">{{ link.title }}</a>
                                <ul class="child_ul">
                                  {% for childlink in linklists[child_list_handle].links %} <!--リンクをひとつずつ取り出す-->  
                                  {% assign sub_list_handle = childlink.title | handleize %}<!--リンクの名前をchild＿list＿handleで定義--> 
                                  {% if linklists[sub_list_handle].links != blank %}

                                  <li class="has-child">
                                    <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                                              <ul class="sub_ul">
                                                {% for sublink in linklists[sub_list_handle ].links %}<!--孫リストここから-->
                                                <li>
                                                  <a href="{{ sublink.url }}">{{ sublink.title }}</a>

                                                </li>
                                                {% endfor %} <!--孫リストここまで-->
                                              </ul>
                                  {%else%}
                                  <li>
                                   <a href="{{childlink.url}}">{{ childlink.title }}</a>
                                  
                                  </li>
                                  {% endif %}
                                  {% endfor %}
                                  
                                 

                                </ul>
                    {% else %}
                    <li>
                      <a href="{{link.url}}">{{link.title}}</a>
                    </li>
                    {% endif %}

          {% endfor %}



        </ul>

        
        
      </nav>
    </div>
    <div class="hamburger" id="js-hamburger">
      <span class="hamburger_border hamburger_border_top"></span>
      <span class="hamburger_border hamburger_border_center"></span>
      <span class="hamburger_border hamburger_border_bottom"></span>
    </div>
    <a href="#" class="logo">
      <img src="img/logo.jpeg" alt="">
    </a>
    <ul class="icon-wrap">
      <li><a href="#" id="openbtn" class="openbtn"><i class="fas fa-shopping-cart"></i></a></li>
    </ul>
    <div class="black_bg" id="js-black-bg"></div>
    <!--カートのサイドバー-->
    <div id="sidebar-cart" class="Drawer-Right">
      <div class="sidebar-cart__header">
        <span class="sidebar-cart__header__text">カート</span>
      </div>
      <form class="sidebar-cart__main">
        <div class="Drawer__Main">
          <div class="Drawer__Container">
            <div class="Cart__ItemList">
              <div class="Cart__Item">
                <div class="Cart__Item__Image">
                  <img src="img/MAISON1_480x480.jpeg" alt="">
                </div>
                <div class="Cart__Item__Info">
                  <h2>アイテムの名前</h2>
                  <div class="Cart__Item__Info__Meta">
                    <ul class="Cart__Item__Info__PropertyList">
                      <li class="Cart__Item__Info__Property">お渡し用袋</li>
                    </ul>
                  </div>
                  <div class="Cart__Item__Info__price">
                    <span>￥2,569</span>
                  </div>
                  <div class="counter">
                    <span><i class="fas fa-minus"></i></span>
                    <span>1</span>
                    <span><i class="fas fa-plus"></i></span>
                  </div>
          
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
    <!--カートのサイドバーここまで-->
  </header>